@model DemoDB2.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>THÊM SẢN PHẨM MỚI</h2>

@using (Html.BeginForm("Create", "Products", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken(){
        <table class="table-bordered">
            <tr>
                <td> @Html.LabelFor(model => model.NamePro) </td>
                <td> @Html.EditorFor(model => model.NamePro) </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(model => model.Price)</td>
                <td> @Html.EditorFor(model => model.Price)</td>
            </tr>

            <tr>
                <td> @Html.LabelFor(model => model.Category)</td>
                <td>
                    @{Html.RenderAction("SelectCate", "Products");}
                </td>
            </tr>

            <tr>
                <td> @Html.LabelFor(model => model.DecriptionPro) </td>
                <td> @Html.EditorFor(model => model.DecriptionPro)</td>
            </tr>

            <tr>
                <td> Thêm hình ảnh </td>
                <td>
                    <img src="@Url.Content(Model.ImagePro)" height="150" id="previewImg" />
                </td>
            </tr>

            <tr>
                <td colspan="2">
                    <input type="file" name="UploadImage" onchange="ChangeImage(this, document.getElementById(" previewImg"))" />
                    <input type="submit" value="Tạo mới" />
                </td>
            </tr>
        </table>
    }
    <script></script>
}
